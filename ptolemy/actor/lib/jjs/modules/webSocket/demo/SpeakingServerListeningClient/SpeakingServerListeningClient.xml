    <entity name="WSServer" class="ptolemy.actor.lib.jjs.JavaScript">
        <property name="script" class="ptolemy.actor.parameters.PortParameter" value="var WebSocket = require('webSocket');&#10;&#10;function onListening() {&#10;  print('server: listening');&#10;}&#10;&#10;// React to a connection established.&#10;var clientWs = null;&#10;&#10;function onConnection(ws) {&#10;  print('server: a client is connected');&#10;  ws.send('hi client!');&#10;  clientWs = ws;&#10;  print('server: context number = 100');&#10;}&#10;&#10;// The web socket server, once created.&#10;var server = null;&#10;&#10;exports.initialize = function() {&#10;  // Start an HTTP server and begin listening for connection requests.&#10;  if (server == null) {&#10;    server = new WebSocket.Server({port:8081});&#10;    server.on('listening', onListening);&#10;    server.on('connection', onConnection);&#10;    server.startServer();&#10;  }&#10;}&#10;&#10;var first = true;&#10;exports.fire = function()&#10;{&#10;  if (clientWs == null) {&#10;    print('server: clientWs is null');&#10;  }&#10;  else if (first) {&#10;    print('server: sending to client');&#10;    clientWs.send('hi again');&#10;    first = false;&#10;  }&#10;}&#10;&#10;exports.wrapup = function()&#10;{&#10;  if (clientWs != null) {&#10;    print('server: closing the socket');&#10;    clientWs.close();&#10;  }&#10;  server.close();&#10;}&#10;&#10;&#10;">
