    iconFile="$INSTALL_PATH\doc\img\visualsense.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Full"/>
  </shortcut>


  <!-- Other places to update the book location: $PTII/adm/gen-X.Y/{makefile,ptIIX_Y_devel_setup_windows.xml} adm/test/Release.tcl -->
