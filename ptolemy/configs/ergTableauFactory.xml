<?xml version="1.0" standalone="no"?>
<!DOCTYPE entity PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">

<property name="factoryERG"
	class="ptolemy.actor.gui.PtolemyTableauFactory">
	<property name="Event Relation Graph Editor"
		class="ptolemy.vergil.erg.ERGGraphTableau$Factory">
      <property name="_library" class="ptolemy.moml.LibraryAttribute">
        <configure>
          <entity name="EventLibrary" class="ptolemy.kernel.CompositeEntity">
            <input source="ptolemy/configs/basicUtilities.xml"/>
            <entity name="Event" class="ptolemy.domains.erg.kernel.Event"/>
            <property name="SynchronizeToRealtime" class="ptolemy.domains.erg.lib.SynchronizeToRealtime">
              <property name="_icon" class="ptolemy.vergil.icon.ValueIcon">
                <property name="_color" class="ptolemy.actor.gui.ColorAttribute" value="{0.0, 0.0, 1.0, 1.0}">
                </property>
              </property>
              <property name="_smallIconDescription" class="ptolemy.kernel.util.SingletonConfigurableAttribute">
                <configure>
                  <svg>
                    <circle cx="3" cy="3" r="2" style="fill:#0000FF"/>
                  </svg>
                </configure>
              </property>
              <property name="_editorFactory" class="ptolemy.vergil.toolbox.VisibleParameterEditorFactory">
              </property>
            </property>
          </entity>
        </configure>
      </property>
	</property>
	<property name="Tree View"
		class="ptolemy.vergil.tree.TreeTableau$Factory" />
	<property name="XML view"
		class="ptolemy.actor.gui.TextEditorTableau$Factory" />
</property>
