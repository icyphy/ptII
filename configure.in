                           defaults to \$PTII/vendors/sun/javacc-5.0],
	JAVACC_DIR=$withval, JAVACC_DIR=$PTII/vendors/sun/javacc-5.0)

    if test "`uname -s`" = "CYGWIN_NT-4.0" -o \
		"`uname -s`" = "CYGWIN_NT-5.0" ; then
	JJTREE='"$(JAVA)" COM.sun.labs.jjtree.Main'
