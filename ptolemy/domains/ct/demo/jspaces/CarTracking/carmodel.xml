<?xml version="1.0" standalone="no"?>
<!DOCTYPE model PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">
<class name="carmodel" extends="ptolemy.actor.TypedCompositeActor">
    <doc>CT model for the a car, without a director</doc>
    <!-- Define the composite actor ports -->
    <port name="forceInput" class="ptolemy.actor.TypedIOPort">
      <property name="forceInput"/>
    </port>
    <port name="velocityOutput" class="ptolemy.actor.TypedIOPort">
      <property name="velocityOutput"/>
    </port>
    <port name="positionOutput" class="ptolemy.actor.TypedIOPort">
      <property name="positionOutput"/>
    </port>
    <!-- Define the actors -->
    <entity name="add1" class="ptolemy.actor.lib.AddSubtract">
	<port name="plus"></port>
	<port name="minus"></port>
        <port name="output"></port>
    </entity>
    <entity name="scaleM" class="ptolemy.actor.lib.Scale">
	<property name="factor" value="1.0"></property>
	<port name="input"></port>
        <port name="output"></port>
    </entity>
    <entity name="scaleN" class="ptolemy.actor.lib.Scale">
	<property name="factor" value="0.5"></property>
	<port name="input"></port>
        <port name="output"></port>
    </entity> 
    <entity name="velocity" class="ptolemy.domains.ct.lib.Integrator">
	<property name="initialState" value="0.0"></property>
	<port name="input"></port>
        <port name="output"></port>
    </entity>
    <entity name="position" class="ptolemy.domains.ct.lib.Integrator">
	<property name="initialState" value="0.0"></property>
	<port name="input"></port>
        <port name="output"></port>
    </entity>
   
    <!-- Make the connections -->
    <relation name="r33" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="forceInput" relation="r33"/>
  	<link port="add1.plus" relation="r33"/>
    <relation name="r44" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="add1.output" relation="r44"/>
  	<link port="scaleM.input" relation="r44"/>
    <relation name="r55" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="scaleM.output" relation="r55"/>
  	<link port="velocity.input" relation="r55"/>
    <relation name="r66" class="ptolemy.actor.TypedIORelation"></relation>
        <link port="position.input" relation="r66"/>
  	<link port="velocity.output" relation="r66"/>
	<link port="scaleN.input" relation="r66"/>
	<link port="velocityOutput" relation="r66"/>
    <relation name="r77" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="scaleN.output" relation="r77"/>
  	<link port="add1.minus" relation="r77"/>
    <relation name="r88" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="position.output" relation="r88"/>
	<link port="positionOutput" relation="r88"/>
</class>
