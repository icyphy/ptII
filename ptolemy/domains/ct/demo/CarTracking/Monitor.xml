<?xml version="1.0" standalone="no"?>
<!DOCTYPE model PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">
<model name="Monitor" class="ptolemy.actor.TypedCompositeActor">
    <doc>Discrete Event Monitor of the two cars.</doc>
    <director class="ptolemy.domains.de.kernel.DEDirector">
        <property name="stopWhenQueueIsEmpty" value="false">
	</property>
    </director>
    
    <!-- Define the actors -->
    <entity name="leadingCar" 
        class="ptolemy.domains.ct.demo.CarTracking.DERealTimeSubscriber">
	<property name="entryName" value="&quot;A&quot;">
	</property>
      	<port name="output"></port>
    </entity>
    <entity name="followingCar" 
        class="ptolemy.domains.ct.demo.CarTracking.DERealTimeSubscriber">
	<property name="entryName" value="&quot;B&quot;">
	</property>
      	<port name="output"></port>
    </entity>
    <entity name="alarm" 
        class="ptolemy.domains.ct.demo.CarTracking.TrackingAlarm">
	<port name="leaderPosition"></port>
      	<port name="followerPosition"></port>
	<port name="tooClose"></port>
	<port name="tooClose"></port>
    </entity>
    <entity name="closePublisher" 
        class="ptolemy.domains.ct.demo.CarTracking.RealTimePublisher">
	<property name="entryName" 
	    value="&quot;TooClose&quot;"></property>
	<port name="input"></port>
    </entity>
    <entity name="farPublisher" 
        class="ptolemy.domains.ct.demo.CarTracking.RealTimePublisher">
	<property name="entryName" 
	    value="&quot;TooFar&quot;"></property>
	<port name="input"></port>
    </entity>
    <entity name="display" class="ptolemy.actor.gui.TimedPlotter">
    	<port name="input"></port>
    	<!-- Configure provided in both a referenced file and local data -->
    	<configure source="DEplotConfigure.xml"><![CDATA[
      	<?xml version="1.0" standalone="no"?>
      	<!DOCTYPE model PUBLIC "-//UC Berkeley//DTD PlotML 1//EN"
           "http://ptolemy.eecs.berkeley.edu/xml/dtd/PlotML_1.dtd">
      	<plot>
        <size width="450" height="300"/>
        <title>Relative Positions</title>
      	</plot>
    	]]></configure>
    </entity>
    <!-- Make the connections -->
    <relation name="r0" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="leadingCar.output" relation="r0"/>
	<link port="alarm.leaderPosition" relation="r0"/>
  	<link port="display.input" relation="r0"/>
    <relation name="r1" class="ptolemy.actor.TypedIORelation"></relation>
  	<link port="followingCar.output" relation="r1"/>
	<link port="alarm.followerPosition" relation="r1"/>
  	<link port="display.input" relation="r1"/>
    <relation name="r2" class="ptolemy.actor.TypedIORelation"></relation>
	<link port="alarm.tooClose" relation="r2"/>
  	<link port="closePublisher.input" relation="r2"/>
    <relation name="r3" class="ptolemy.actor.TypedIORelation"></relation>
	<link port="alarm.tooFar" relation="r3"/>
  	<link port="farPublisher.input" relation="r3"/>
</model>
