   to the Eclipse classpath under Darwin because it is already present.]);;
            esac;;
   esac

    if test "$addToolsJarToEclipse" = "yes" ; then
       ECLIPSE_CLASSPATHENTRY_LIBS="$ECLIPSE_CLASSPATHENTRY_LIBS \
       <classpathentry kind=\"lib\" path=\"$TOOLS_JAR\"/>"
