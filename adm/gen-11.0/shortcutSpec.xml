    description="HyVisual 11.0.beta, the Hybrid System GUI"
    iconFile="$INSTALL_PATH\doc\img\hyvisual.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Full"/>
  </shortcut>

  <shortcut
    name="VisualSense"
    programGroup="yes"
    desktop="no"
