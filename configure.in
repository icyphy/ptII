       # unzip QTJava.zip
       cd QTJava
       jar -cf ../QTJava.jar .
    QuickTime for Java is only needed if you want to build in
    $QUICKTIME_USER_DIR,
    otherwise the build will proceed fine without Quicktime for Java.])
        fi
    fi
    cd "$startdir"
