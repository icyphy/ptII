	AC_MSG_WARN([
Be sure that your CLASSPATH includes JavaCC.zip, which is located in]);
    else
	if test ! -d "$JAVACC_DIR"; then
	    AC_MSG_WARN([Could not find directory
    '${JAVACC_DIR}'
    so we search for the jjtree command.])
	    AC_PATH_PROG(JJTREE, jjtree)
