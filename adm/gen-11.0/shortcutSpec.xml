<!-- Used by izPack to create Windows Menu Shortcuts.  See ptIIX_Y_setup_windows.xml -->
<shortcuts>
  <skipIfNotSupported/>

  <programGroup defaultName="Ptolemy\ptII11.0.beta"
                location="applications"/>

  <shortcut
    name="Vergil -ptiny"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\ptiny.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Ptiny 11.0.beta, the subset of Ptolemy II GUI"
    iconFile="$INSTALL_PATH\doc\img\ptiny.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Ptiny"/>
  </shortcut>

   <shortcut
     name="Ptolemy II $APP_VER Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     workingDirectory="$INSTALL_PATH"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"     
     commandLine=""
     iconFile="%SystemRoot%\system32\SHELL32.dll"
     iconIndex="31" 
     description="This uninstalls Ptolemy II 11.0.beta">
     
     <createForPack name="Ptiny" />
   </shortcut>

  <shortcut
    name="Vergil"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\vergil.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Vergil 11.0.beta, the full Ptolemy II GUI"
    iconFile="$INSTALL_PATH\doc\img\vergil.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Full"/>
  </shortcut>

  <shortcut
    name="HyVisual"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
