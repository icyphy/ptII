<?xml version="1.0" standalone="no"?>
<!DOCTYPE plot PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">
<entity name="sources" class="ptolemy.moml.EntityLibrary">
  <configure>
    <?moml
      <group>
<doc>Domain-polymorphic sources</doc>

<entity name="Clock" class="ptolemy.actor.lib.Clock">
<doc>Create a generalized square wave</doc>
</entity>

<entity name="Const" class="ptolemy.actor.lib.Const">
<doc>Create a constant sequence</doc>
   <property name="_icon" class="ptolemy.vergil.icon.BoxedValueIcon">
      <property name="attributeName" value="value"/>
      <property name="displayWidth" value="40"/>
   </property>
</entity>

<entity name="CurrentTime" class="ptolemy.actor.lib.CurrentTime">
</entity>

<entity name="Interpolator" class="ptolemy.actor.lib.Interpolator">
</entity>

<entity name="PoissonClock" class="ptolemy.actor.lib.PoissonClock">
</entity>

<entity name="Pulse" class="ptolemy.actor.lib.Pulse">
</entity>

<entity name="Ramp" class="ptolemy.actor.lib.Ramp">
<doc>Create a sequence of tokens with increasing value</doc>
</entity>

<entity name="SequentialClock" class="ptolemy.actor.lib.SequentialClock">
<doc>A clock producing exactly one output per clock tick</doc>
</entity>

<!-- Do not include SerialComm here, it requires the javacomm api, 
which is not always present -->

<entity name="Sinewave" class="ptolemy.actor.lib.Sinewave"/>

<entity name="SketchedSource" class="ptolemy.actor.lib.gui.SketchedSource">
<doc>Create values from a sketch on the screen</doc>
</entity>

<entity name="TimedSinewave" class="ptolemy.actor.lib.TimedSine"/>
<entity name="TriggeredClock" class="ptolemy.actor.lib.TriggeredClock"/>
<entity name="VariableClock" class="ptolemy.actor.lib.VariableClock">
<doc>Create a sequence of tokens with increasing value</doc>
</entity>

<entity name="WallClockTime" class="ptolemy.actor.lib.WallClockTime">
<doc>Output the current real time in seconds</doc>
</entity>

      </group>
    ?>
  </configure>
</entity>


